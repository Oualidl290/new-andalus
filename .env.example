# Application Configuration
NODE_ENV="development"
PORT=3000

# Database Configuration (Docker defaults)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/new_andalus_dev"

# Redis Configuration (Docker defaults)
REDIS_URL="redis://:redis_password@localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD="redis_password"
REDIS_DB="0"

# Authentication (NextAuth.js)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="dev-secret-change-in-production"

# Security Configuration
CSRF_SECRET="dev-csrf-secret-change-in-production"
JWT_SECRET="dev-jwt-secret-change-in-production"

# Email Configuration (MailHog for development)
EMAIL_FROM="noreply@newandalus.local"
EMAIL_SERVER_HOST="localhost"
EMAIL_SERVER_PORT=1025
EMAIL_SERVER_USER=""
EMAIL_SERVER_PASSWORD=""

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp"
UPLOAD_DIR="./uploads"

# External Services (Optional)
SECURITY_WEBHOOK_URL=""
MONITORING_API_URL=""
MONITORING_API_KEY=""

# OAuth Providers (Optional - configure as needed)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=""

# CDN Configuration (Optional)
CDN_URL=""

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_TWO_FACTOR_AUTH=false